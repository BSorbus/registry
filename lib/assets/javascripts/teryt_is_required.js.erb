function setForPL(twinAddressCombineId, 
                  twinProvinceCodeId, 
                  twinProvinceNameId,
                  twinDistrictCodeId,
                  twinDistrictNameId,
                  twinCommuneCodeId,
                  twinCommuneNameId,
                  twinCityCodeId,
                  twinCityNameId,
                  twinStreetCodeId,
                  twinStreetNameId,
                  twinStreetAttributeId,
                  twinAddressPostalCodeId) {

    document.getElementById(twinAddressCombineId).readOnly = false;
    document.getElementById(twinProvinceNameId).readOnly = true;
    document.getElementById(twinDistrictNameId).readOnly = true;
    document.getElementById(twinCommuneNameId).readOnly = true;
    document.getElementById(twinCityNameId).readOnly = true;
    document.getElementById(twinStreetNameId).readOnly = true;
    document.getElementById(twinStreetAttributeId).readOnly = true;
    document.getElementById(twinAddressPostalCodeId).readOnly = true;

    document.getElementById(twinAddressCombineId).parentNode.hidden = false;
    document.getElementById(twinStreetAttributeId).parentNode.hidden = false;
    document.getElementById(twinProvinceNameId).parentNode.hidden = false;
    document.getElementById(twinDistrictNameId).parentNode.hidden = false;
    document.getElementById(twinCommuneNameId).parentNode.hidden = false;
};

