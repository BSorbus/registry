<div class="row">
  <div class="col-sm-12">
    <%= form_with(model: role, local: true) do |f| %>

      <% input_disabled ||= false  
         #if input_disabled is not passed to the partial it doesn't crash. 
         # We default it to false 
      %>

      <%= form_errors_for role %>

      <div class="row">
        <div class="col-sm-6">
          <div class="row">

            <div class="form-group required col-sm-12">
              <%= f.label :name, class: 'control-label' %>
              <%= f.text_field :name, autofocus: true, class: 'form-control input-sm', disabled: input_disabled %>
            </div>

          </div>  <!-- /row -->
        </div>  <!-- /col-sm-6 -->


        <div class="col-sm-6">
          <div class="row">
            <div class="form-group col-sm-12">
              <%= f.label :note, class: 'control-label' %>
              <%= f.trix_editor :note %>
            </div>
          </div> <!-- /row -->
        </div> <!--/col-sm-6 -->

      </div>  <!-- /row -->

      <div class="row">
        <div class="col-sm-12">
          <div class="row">

            <div class="form-group col-sm-12">
              <%= f.label :activities %>
              <%= f.text_field :activities, class: 'form-control input-sm', disabled: input_disabled %>
            </div>

          </div> <!-- /row -->
        </div> <!--/col-sm-12 -->
      </div>  <!-- /row -->


      <hr class="hr-without-top-margin">

      <div class="row">
        <div class="col-sm-12">

          <%= link_to role.new_record? ? roles_path() : role_path(role), class: "btn btn-default" do %>
            <%= back_from_new_or_edit_legend %>
          <% end %>

          <%= f.submit nil, class: 'btn btn-success' %>

        </div> <!--/col-sm-12 -->
      </div> <!-- /row -->
      
    <% end %>

  </div> <!--/col-sm-12-->
</div>