<div id="tab_users">
  <fieldset class="my-fieldset">
    <legend class="my-fieldset colored-title"><%= subtitle %>&nbsp;&nbsp;-&nbsp;&nbsp;<%= user_index_legend %></legend>

    <div class="row">
      <div class="col-sm-12">
        <table id="role-users-table" class="hover cell-border compact" width="100%" 
          data-source="<%= datatables_index_for_role_users_path(role_id: @role.id, format: :json) %>",
          data-locale_url="<%= datatables_lang_path(format: :json) %>">
          <thead>
            <tr>
              <th>ID</th>
              <th><%= User.human_attribute_name(:email) %></th>
              <th><%= User.human_attribute_name(:last_name) %></th>
              <th><%= User.human_attribute_name(:first_name) %></th>
              <th><%= User.human_attribute_name(:note) %></th>
              <th><%= t('table_role_granted') %></th>
              <th><%= t('table_action') %></th>
            </tr>
          </thead>
          <tbody>
             <!--data from JSON -->
          </tbody>
        </table>
      </div> <!--/col-sm-12 -->
    </div> <!--/row -->

  </fieldset>
</div>