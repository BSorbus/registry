<div class="grid-container">

  <div class="sidebar">
    <%= render 'sidebar_show' %>
  </div>

  <div class="main-content">
    <br>
    <div class="container-fluid"> 
      <div class="row">

        <div class="col-sm-12">
          <div class="tab-content clearfix">

            <div role="tabpanel" class="tab-pane active" id="organization_show">
              <%= render 'data', input_disabled: true, subtitle: organization_info_legend(@organization) %>
            </div>
 
            <div role="tabpanel" class="tab-pane" id="proposals">
              <%= render 'proposals', subtitle: organization_info_legend(@organization) %>
            </div>

            <div role="tabpanel" class="tab-pane" id="registers">
              <%= render 'registers', subtitle: organization_info_legend(@organization) %>
            </div>

            <div role="tabpanel" class="tab-pane" id="works">
              <%= render 'works/works_tab', trackable_type: "Organization", trackable_id: @organization.id, subtitle: organization_info_legend(@organization) %>
            </div>

            <div role="tabpanel" class="tab-pane" id="versions">
              <%= render 'versions/versions_tab', trackable_type: "Organization", trackable_id: @organization.id, subtitle: organization_info_legend(@organization) %>
            </div>

          </div>
        </div>

      </div>

    </div> <!--/container-fluid--> 
  </div> <!--/main-content--> 

</div> <!--/grid-containe--> 


<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content"></div>
  </div>
</div>

<script type="text/javascript">

  // jezeli nastepuje wyswietlenie tab, to zaladuj dane
  $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
    var target = $(e.target).attr("href") // activated tab
    if (target == '#proposals') {

      if ("<%= policy(:proposal).index_j? %>" == 'true' ) {
        $.ajax({
          url: "/<%= params[:locale] %>/organizations/<%= @organization.id %>/ajax_load_proposals.js",
          type: "GET",
          data: {
            service_type: "j"
          },
          error: function (jqXHR, exception) {
            console.log(jqXHR);
            if (jqXHR.status == 401) {
              window.location.reload();
            } else {
              getErrorMessage(jqXHR, exception);
            }
          }
        });
      };

