<button class="sideber-button fa fa-chevron-right" onclick="changeSidebar(this)" title="<%=t('sidebar')%>" rel='tooltip'></button>

<div class="sidebar-content-small container-fluid">
  <div class="center"><%= proposal_icon_legend %></div>
  <hr>

  <div class="row">
    <div class="col-sm-12">

      <ul class="nav nav-pills brand-pills nav-stacked" role="tablist">

        <li role="presentation" class="brand-nav active" title="<%= t('helpers.links.show') %>" rel='tooltip'>
          <a href="#proposal_show" aria-controls="proposal_show" role="tab" data-toggle="tab"><%= proposal_icon_legend %></a>
        </li>

        <% if proposal_policy_check(@proposal, 'work', params[:service_type]) %>
          <li role="presentation" class="brand-nav" title="<%= t('works.index.title') %>" rel='tooltip'>
            <a href="#works" aria-controls="works" role="tab" data-toggle="tab"><%= work_icon_legend %></a>
          </li>
        <% end %>

        <% if proposal_policy_check(@proposal, 'version', params[:service_type]) %>
          <li role="presentation" class="brand-nav" title="<%= t('versions.index.title') %>" rel='tooltip'>
            <a href="#versions" aria-controls="works" role="tab" data-toggle="tab"><%= version_icon_legend %></a>
          </li>
        <% end %>


        <%# if proposal_policy_check(:proposal, 'index', params[:service_type]) %>
          <hr>
          <li role="presentation" class="brand-nav"><%= link_to proposals_path(params[:service_type]), title: t('.index'), rel: 'tooltip' do %>
            <span class="fa fa-list"></span>
            <% end %>
          </li>
        <%# end %>

      </ul>

    </div>
  </div>

</div>    


<div class="sidebar-content-large hidden container-fluid">
  <div class="center"><%= proposal_legend(params[:service_type]) %></div>
  <hr>
  <div class="row">
    <div class="col-sm-12">

      <ul class="nav nav-pills brand-pills nav-stacked" role="tablist">

        <li role="presentation" class="brand-nav active" title="<%= t('helpers.links.show') %>" rel='tooltip'>
          <a href="#proposal_show" aria-controls="proposal_show" role="tab" data-toggle="tab"><%= proposal_show_legend %></a>
        </li>

        <% if proposal_policy_check(@proposal, 'work', params[:service_type]) %>
          <li role="presentation" class="brand-nav brand-nav-level-1" title="<%= t('works.index.title') %>" rel='tooltip'>
            <a href="#works" aria-controls="works" role="tab" data-toggle="tab"><%= work_index_legend %></a>
          </li>
        <% end %>  

        <% if proposal_policy_check(@proposal, 'version', params[:service_type]) %>
          <li role="presentation" class="brand-nav brand-nav-level-1" title="<%= t('versions.index.title') %>" rel='tooltip'>
            <a href="#versions" aria-controls="works" role="tab" data-toggle="tab"><%= version_index_legend %></a>
          </li>
        <% end %>  

        <hr>
        <li role="presentation" class="brand-nav"><%= link_to proposals_path(params[:service_type]), title: t('.index'), rel: 'tooltip' do %>
            <%= back_to_index_legend %>
          <% end %>
        </li>

      </ul>

    </div>
  </div>

  <hr>
  <div class="row">
    <div class="col-sm-12">
      <div class="center"><%= fa_icon("eye", size: '2x') %></div>
      <h3 class="center"><%= t('helpers.links.show') %></h3>
    </div>
  </div>


</div>