<div class="fields collored-subfields scale-in-br">

  <div class="row">
    <div class="form-group required col-sm-4">
      <%= f.label :network_type_id, class: 'control-label' %>
      <%= f.select :network_type_id, 
            FeatureType.only_network_type.order(:name).collect {|v| [ "#{v[:name]}", v[:id] ] },
            { include_blank: false }, 
            { autofocus: false, class: 'form-control input-sm' } %>
    </div>

    <div class="form-group col-sm-6">
      <%= f.label :description, class: 'control-label' %>
      <%= f.trix_editor :description %>
      <%#= f.text_area :description, :rows => 2, class: 'form-control input-sm' %>
    </div>

    <div class="form-group col-sm-2">
      <% if f.object.marked_for_destruction? %>

        <label class="btn btn-sm btn-danger control-label  pull-right" role="button", title="<%=t('tooltip.confirm_remove_fields_nested')%>", rel='tooltip'>
          <%= f.check_box :_destroy %>
          <span></span>
          &nbsp;&nbsp;<%= f.object.class.human_attribute_name(:_destroy) %>
        </label>

      <% else %>
        <%= f.hidden_field :_destroy %>
        <%= link_to t("helpers.links.link_to_remove_fields_nested"), '#',
          onClick: "removeNestedFields(this); return false;", class: 'remove-link-button btn btn-sm btn-danger  pull-right', title: t('tooltip.remove_fields_nested'), rel: 'tooltip' %>
        <% end %>
    </div>

  </div>


  <!-- nested: -->
  <div class="row">
    <div class="col-sm-12">
      <fieldset class="my-fieldset">
        <legend class="my-fieldset"><%= t('proposal_networks.fieldset.proposal_services_title') %></legend>

        <div class='proposal_services clearfix'>

          <div class='proposal_services-sub-form'>
            <%= f.fields_for :proposal_services do |proposal_services_form|  %>
              <%= render 'proposal_services/proposal_service_fields', f: proposal_services_form %> 
            <% end %>
          </div>
          <%= link_to_add_fields( t("helpers.links.link_to_add_fields_nested"), f, :proposal_services, 'proposal_services/proposal_service_fields') %>

        </div>

      </fieldset>
    </div> 
  </div>  <!-- /row -->

</div>

