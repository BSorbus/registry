<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h3 class="center colored-title index-title"><%= version_index_legend %></h3>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->
</div> <!--/container -->

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <table id="versions-table" class="hover cell-border" cellspacing="0" width="100%" 
        data-source="<%= datatables_index_versions_path(format: :json) %>",
        data-locale_url="<%= datatables_lang_path(format: :json) %>">
        <thead>
          <tr>
            <th>0 ID </th>
            <th><%= Version.human_attribute_name(:created_at) %></th>
            <th><%= Version.human_attribute_name(:transaction_id) %></th>
            <th><%= Version.human_attribute_name(:created_by) %></th>
            <th><%= Version.human_attribute_name(:action) %></th>
            <th><%= Version.human_attribute_name(:trackable_type) %></th>
            <th><%= Version.human_attribute_name(:trackable_id) %></th>
            <th class="col-sm-3"><%= Version.human_attribute_name(:object_changes) %></th>
            <th class="col-sm-3"><%= Version.human_attribute_name(:parameters) %></th>
          </tr>
        </thead>

        <tbody>
           <!--data from JSON -->
        </tbody>
      </table>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->
</div> <!--/container -->

